ex:scalar_value_specification_x
 a sh:NodeShape ;
 sh:targetClass obi:scalar value specification;
 sh:property [
 sh:path ro:specifies value of;
 sh:class pmd:quality;
  sh:nodeKind sh:IRI ;
  sh:minCount 1 ;
 ] ;
sh:property [
 sh:path iao:has measurement unit label;
 sh:class iao:measurement unit label;
 sh:nodeKind sh:IRI ;
  sh:maxCount 1 ;
 ] ;
sh:property [
 sh:path ro:has specified numeric value;
 sh:datatype xsd:float;
 ] ;
sh:closed true ;
 sh:ignoredProperties ( rdf:type ) .
